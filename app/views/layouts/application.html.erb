<!DOCTYPE html>
<html>
  <head>
    <title>ShopFashion</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

  </head>

  <body>
    <%= render "layouts/header"  unless params[:controller] == "users/sessions" || params[:controller] == "users/registrations" || params[:controller] == "suppliers/sessions" || params[:controller] == "suppliers/registrations" %>
    <%= yield %>
    <%= render "layouts/footer"  unless params[:controller] == "users/sessions" || params[:controller] == "users/registrations" || params[:controller] == "suppliers/sessions" || params[:controller] == "suppliers/registrations" %>

    <div id='flash_message'>
      <%= render 'layouts/flash_message' %>
    </div>
  </body>
</html>
